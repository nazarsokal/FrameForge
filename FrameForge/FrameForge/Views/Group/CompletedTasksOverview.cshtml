@using Entities
@model Entities.User

@{
    Layout = "_Layout";
    var submittedTasks = ViewBag.UsersExercises as Dictionary<Student, List<ExerciseSubmission>> ?? new Dictionary<Student, List<ExerciseSubmission>>();
}

<!DOCTYPE html>

<html>
<head>
    <title>title</title>
    <style>
        /* Container for all the cards */
        .card-container {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
        }

        /* Individual card style */
        .card {
            background-color: #ffffff;
            border: 1px solid #ddd;
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
            padding: 20px;
            width: 300px;
            transition: transform 0.2s ease-in-out;
        }

        /* Hover effect */
        .card:hover {
            transform: translateY(-5px);
        }

        /* Card title */
        .card h3 {
            margin-top: 0;
            font-size: 1.2rem;
            color: #333;
        }

        /* Info text */
        .card p {
            color: #555;
            margin: 10px 0;
            font-size: 0.95rem;
        }

        /* Button style */
        .card a.button {
            display: inline-block;
            margin-top: 10px;
            background-color: #4CAF50;
            color: white;
            padding: 8px 14px;
            text-decoration: none;
            border-radius: 5px;
        }

        .card a.button:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>
<div class="card-container">
    @foreach (var submission in submittedTasks)
    {
        <h1>@submission.Key.Username</h1>
        @foreach(var exercise in submission.Value)
        {
            <div class="card">
                <h3>@exercise.ExerciseName</h3>
                <p><strong>Дата подачі:</strong> @exercise.SubmissionDate.ToString("dd.MM.yyyy HH:mm")</p>
                <a href="/Exercises/Details/@exercise.ExerciseId" class="button">Переглянути</a>
            </div>
        }
    }
</div>
</body>
</html>