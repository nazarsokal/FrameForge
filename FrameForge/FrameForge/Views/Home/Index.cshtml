@model Entities.Student?

@{
    ViewData["Title"] = "Frame Forge";
}


<!DOCTYPE html>
<html>

<head>
    <title>Frame Forge</title>
    <link rel="stylesheet" href="~/style.css">
</head>

<body>
    <!--Хедер-->
    @if (@Model != null)
    {
        <div class="header">
            <div class="leftText">
                <h1>Frame Forge <img src="~/images/FrameForge.png" width="30px" alt="FrameForge Logo"></h1>
            </div>
            <div class="dropbutton"></div>
            <div class="user-profile">
                <img src="images/users/@(Model.StudentId).jpg" alt="icon" class="accountIcon" style="border-radius: 50%;">
                <span class="rightText">@Model.Username</span>
            </div>
        </div>
    }
    else
    {
        <div class="header">
            <div class="leftText">
                <h1>Frame Forge <img src="~/images/FrameForge.png" width="30px" alt="FrameForge Logo"></h1>
            </div>
            <div class="dropbutton"></div>
            <div class="user-profile">
                @* <img src="~/images/account.png" alt="icon" class="accountIcon"> *@
                @* <span class="rightText">@Model.Username</span> *@
                <a asp-controller="Login" asp-action="Login"><button >Log In</button></a>
                <a asp-controller="Registration" asp-action="Registration"><button >Register</button></a>
            </div>
        </div>
    }

    <!--Навігаційне меню-->
    <div class="container">
        <nav class="leftContent">
            <ul class="leftNavMenu">
                <li><a asp-controller="ProgressMap" asp-action="Map">Карта</a></li>
                <li>Батл</li>
                <li>Магазин</li>
                <li>Тести</li>
                <li>Задачі</li>
            </ul>
        </nav>

        <!--Тестові завданя-->
        <div class="task">
            <ul class="bodyOfTask">
                <li class="taskCard">
                    <div class="TaskHeader">
                        <h2>Відредагуйте код</h2>
                    </div>
                    <div class="taskDiscription">
                        <p>Lorem ipsum dolor sit amet consectetur, adipisicing elit. Hic vel quam voluptates, nam
                            possimus eaque a ipsam eveniet, unde minima quos deserunt est, ut velit magni culpa quae
                            voluptatibus sunt.</p>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</body>

</html>
