@model Entities.InputLoginData

<!DOCTYPE html>
    <html lang="en">
        <head>
            <meta charset="UTF-8">
            <meta http-equiv="X-UA-Compatible" content="IE=edge">
            <meta name="viewport" content="width=device-width, initial-scale=1">
            <title>:: Login ::</title>
            <!-- Ini Link CSS -->
            <link href="https://fonts.googleapis.com/css?family=Montserrat&display=swap" rel="stylesheet">
            <link href="~/login_css/login_page.css" rel="stylesheet">
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
        </head>
    <body>
    <div class="container">
        <div class="box-1"></div>
        <div class="box-2"></div>
        <div class="box-3"></div>
        <div class="box-login">
            <br>
            <br>
                  
            <h1 style="text-align: center; font-family: 'Montserrat', sans-serif;">LOGIN</h1>
            <form method="POST" asp-controller="Login" asp-action="LoginWithLoginAndPassword">
                <input asp-for="Username" type="text" placeholder="Username" name="username">
                <br>
                <input asp-for="Password" type="password" placeholder="Password" name="password">
                <br>
                <label>
                    <input asp-for="IsTeacher" type="checkbox" id="isTeacherCheckbox"/>
                    Login as Teacher
                </label>
                <p style="margin-left: 180px; font-family: 'Montserrat', sans-serif;">Forgot Password ?</p>
                @* <a href="main_page.html">Login</a> *@
                <button type="submit">Login</button>
                <div class= "login-with">

                    <ul>
                        <li><i class="fa fa-facebook"></i></li>
                        <a id="googleLoginLink" style="text-decoration: none; color: black;"><li><i class="fa fa-google"></i></li></a>
                        <li><i class="fa fa-twitter"></i></li>
                    </ul>

                </div>
            </form>
            <p style="text-align: center; font-family: 'Montserrat', sans-serif;"><a asp-controller="Registration" asp-action="Registration">Sign Up</a></p>
        </div>
    </div>
    </body>
        <script>
            const checkbox = document.getElementById("isTeacherCheckbox");
            const link = document.getElementById("googleLoginLink");

            checkbox.addEventListener("change", () => {
                const isChecked = checkbox.checked;
                link.href = `/GoogleOAuth/RedirectOnOAuthServer?isTeacher=${isChecked}`;
            });
        </script>
    </html>